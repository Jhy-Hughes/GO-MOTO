
.shopping-cart {
  padding: 20px;
}
.cart-item {
  display: flex;
  margin-bottom: 20px;
}
.item-image img {
  width: 100px;
  height: auto;
}
.item-details {
  flex-grow: 1;
  margin-left: 10px;
}
.cart-total {
  margin-top: 20px;
  text-align: right;
}
.bottom-button{
	margin-top: 20px;
	position: absolute;
	bottom: 10px;
	display: flex;
	width: 100%;
}
.input-button{
	width: 5%;
	  display: flex;
	  justify-content: center;
	  align-items: center;
}
.cart-buttons {
  
  display: flex;
  width: 95%;
  justify-content: space-around;
}
.cart-buttons button {
  /* margin-left: 10px; */
  width: 40%;
}
.input-button input{
	border: 2px solid #ccc;
	border-color: antiquewhite;
	background-color: beige;
	width: 20px;
	height: 20px;
}
